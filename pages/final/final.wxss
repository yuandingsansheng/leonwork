/* 版本2样式 */

page {
    height: 100vh;
}

.container {
    background: #fffff5;
    width: 750rpx;
    height: 100%;
    overflow: hidden;
}

.result-box {
    position: relative;
    display: flex;
    flex-direction: column;
    flex: 1;
    align-items: center;
    justify-content: center;
    background: url("https://wx4.sinaimg.cn/mw690/006oQknOgy1fukxa2bsnhj30ge0jc3z8.jpg");
    width: 455rpx;
    height: 557rpx;
    margin-left: 147rpx;
    margin-top: 48rpx;
    text-align: center;
    font-size: 32rpx;
    background-size: 455rpx 557rpx;
    background-repeat: no-repeat;
    margin-bottom: 50rpx;
}

.title {
    transform: translateY(-100%);
}

.name {
    font-size: 60rpx;
    color: #7a0707;
    font-style: initial;
    font-weight: 800;
    font-family: 'LiSu';
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

/* 提示信息 */

.tip {
    font-size: 24rpx;
    font-weight: 400;
}

.describe {
    transform: translateY(40%);
    margin-left: 10%;
    margin-right: 10%;
    font-size: 28rpx;
}

.goal-box {
    display: flex;
    flex: row;
    align-items: center;
}

.goal {
    width: 447rpx;
    height: 188rpx;
    display: inline-flex;
    align-items: center;
    margin-right: 40rpx;
    font-size: 32rpx;
    line-height: 50rpx;
    border-top: solid 1px #ccc;
    border-bottom: solid 1px #ccc;
}

.goal-text {
    margin-left: 60rpx;
}

.nick-name {
    font-weight: 500;
    color: #333;
    font-size: 40rpx;
    margin-left: 20rpx;
}

.qr-msg {
    width: 400rpx;
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.qrcode {
    width: 275rpx;
    height: 275rpx;
    border-radius: 50%;
    transform: translateY(-3%) translateX(-10%);
}

.qr-describe {
    font-size: 28rpx;
    margin-bottom: 20rpx;
    transform: translateX(-10%);
}

.white-border {
    width: 750rpx;
    height: 20rpx;
    margin-top: 5rpx;
    background-color: #f3f4f5;
}

.btnArea {
    width: 600rpx;
    height: 140rpx;
    display: flex;
    flex-direction: row;
    flex: 1;
    align-items: center;
    justify-content: center;
    margin-left: 75rpx;
}

button {
    width: 240rpx;
    height: 63rpx;
    font-size: 25rpx;
}

#return {
    background: url('https://wx3.sinaimg.cn/mw690/006oQknOgy1fu37z1imipj306y0280at.jpg');
    background-size: 240rpx 63rpx;
}

#save {
    background: url('https://wx4.sinaimg.cn/mw690/006oQknOgy1fu37yofxu7j306y0280b3.jpg');
    background-size: 240rpx 63rpx;
}

canvas {
    position: fixed;
    top: 99999px;
    width: 750rpx;
    height: 1228rpx;
}
