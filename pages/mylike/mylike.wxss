page {
    font-size: 30rpx;
    background: #fffff5;
}

.contaniner {
    width: 750rpx;
    height: 100vh;
    margin: 0;
    padding: 0;
    overflow: hidden;
}

.matches {
    margin-bottom: 50rpx;
    width: 700rpx;
    height: 300rpx;
    margin-left: 25rpx;
    background-image: url('https://wx2.sinaimg.cn/mw690/006oQknOgy1fvxs0juj1fj30kk08xa9x.jpg');
    background-size: 100% 100%;
    /* background: rgb(219, 241, 252);
    background: linear-gradient(to left bottom, transparent 50%, rgba(0, 0, 0, 0.4) 0) no-repeat 100% 0 / 2em 2em,
                linear-gradient(-135deg, transparent 1.5em, rgb(219, 241, 252) 0); */
    overflow: scroll;
}

.name-area, .describe {
    width: 620rpx;
    margin-left: 40rpx;
    margin-top: 30rpx;
}

.name {
    font-size: 38rpx;
    font-weight: 800;
    color: rgba(224, 85, 50, 0.667);
    margin-right: 10rpx;
}

.pinyin {
    font-size: 30rpx;
    color: #333;
}

.msg {
    font-size: 30rpx;
    margin-right: 30rpx;
    color: #999;
}

.short-msg {
    margin-left: 80rpx;
    margin-top: 30rpx;
}

.describe {
    height: 83rpx;
    overflow: hidden;
}

.des {
    font-size: 28rpx;
    color: #999;
}

.tip {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 40rpx auto;
    color: #c0c0c0;
}

/* icon */

.icon {
    display: flex;
    margin-top: 200rpx;
    margin-left: auto;
    margin-right: auto;
    justify-content: center;
    width: 200rpx;
    height: 160rpx;
}
