/**index.wxss**/

page {
    height: 100%;
}

.container {
    width: 100%;
    height: 100%;
    background-color: #fffff5;
}

.progress {
    position: relative;
    top: 40rpx;
    height: 10%;
}

.question-area {
    width: 80%;
    height: 80%;
    position: relative;
    left: 10%;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-image: url("https://wx4.sinaimg.cn/mw690/006oQknOgy1fukxa2bsnhj30ge0jc3z8.jpg");
    background-size: 600rpx 940rpx;
    background-repeat: no-repeat;
}

.out {
    margin-top: 15rpx;
    margin-left: 10%;
    margin-right: 10%;
    width: 80%;
    height: 10px;
    border: 1px solid rgb(71, 71, 71);
    border-radius: 10px;
    overflow: hidden;
    background-color: #fcfcfc;
}

.in {
    height: 100%;
    background-color: #FFE4E1;
    border-radius: 10px;
    transition: 0.3s;
}

.page-hd {
    margin-top: 180rpx;
    height: 60rpx;
    margin-left: 10%;
    margin-right: 10%;
    font-size: 34rpx;
    text-align: center;
}

.page-bd {
    padding-top: 40rpx;
}

button {
    min-width: 250rpx;
    max-width: 530rpx;
    min-height: 60rpx;
    border-radius: 10rpx;
    margin-top: 50rpx;
    text-align: center;
    background: linear-gradient(45degrgb(161, 55, 55) 0, #d9d4d4 50%);
    display: flex;
    align-items: center;
}
